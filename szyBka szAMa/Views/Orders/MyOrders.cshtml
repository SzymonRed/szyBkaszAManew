@model IEnumerable<szyBka_szAMa.Models.Order>

@{
    ViewData["Title"] = "Moje Zamówienia";
}

<h2>Moje Zamówienia</h2>

@if (!Model.Any())
{
    <p>Nie masz żadnych zamówień.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Data Zamówienia</th>
            <th>Status</th>
            <th>Czas Przygotowania</th>
            <th>Czas Dostarczenia</th>
            <th>Metoda Płatności</th>
            <th>Metoda Dostawy</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.TimeOrdered.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@order.Status</td>
                <td>@(order.TimePrepared?.ToString("yyyy-MM-dd HH:mm") ?? "Nie ustalona")</td>
                <td>@(order.TimeDelivered?.ToString("yyyy-MM-dd HH:mm") ?? "Nie ustalona")</td>
                <td>@order.PaymentMethod</td>
                <td>@order.DeliveryMethod</td>
                <td>
                    <a asp-action="Details" asp-controller="Orders" asp-route-id="@order.Id" class="btn btn-info">View</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}