@{
    ViewData["Title"] = "Logowanie Administratora Restauracji";
}

<h2>Logowanie</h2>
<div class="d-flex justify-content-center align-items-center">
    <div class="container" style="max-width: 400px;">
        <form asp-action="Login" method="post">
            <div class="form-floating mt-3">
                <input type="email" name="email" class="form-control" placeholder="Email" id="email" required/>
                <label>Adres email</label>
            </div>
            <div class="form-floating mt-3">
                <input name="password" class="form-control" type="password" placeholder="Password" id="password" required/>
                <label>Hasło</label>
            </div>
            <br/>
            <button type="submit" class="btn btn-primary w-100">Zaloguj</button>
        </form>
        <br/>
        <p>Nie masz konta? <a asp-action="Create" asp-controller="Users">Zarejestruj się tutaj!</a></p>
    </div>
</div>
@if (!ViewData.ModelState.IsValid)
{
    <div class="text-danger mt-2">
        Nieprawidłowy adres email lub hasło.
    </div>
}
