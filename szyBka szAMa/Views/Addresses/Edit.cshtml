@model szyBka_szAMa.Models.Address

@{
ViewData["Title"] = "Edit Address";
}

<h1>Edytuj adres</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" name="restaurantId" value="@ViewBag.RestaurantId" />
    <div class="row">
        <div class="form-floating col-md-6">
            <label asp-for="Street">Ulica</label>
            <input asp-for="Street" class="form-control" />
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>
        <div class="form-floating col-md-3">
            <label asp-for="Building">Budynkek</label>
            <input asp-for="Building" class="form-control" />
            <span asp-validation-for="Building" class="text-danger"></span>
        </div>
        <div class="form-floating col-md-3">
            <label asp-for="Apartment">Lokal</label>
            <input asp-for="Apartment" class="form-control" />
            <span asp-validation-for="Apartment" class="text-danger"></span>
        </div>
    </div>

    <div class="row mt-3">
        <div class="form-floating col-md-6">
            <label asp-for="ZipCode">Kod pocztowy</label>
            <input asp-for="ZipCode" class="form-control" />
            <span asp-validation-for="ZipCode" class="text-danger"></span>
        </div>
        <div class="form-floating col-md-6">
            <label asp-for="City">Miasto</label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>

    <div class="form-floating mt-3">
        <label asp-for="Email">Adres email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-floating mt-3">
        <label asp-for="Phone">Numer telefonu</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-action="Details" asp-controller="Restaurants" asp-route-id="@ViewBag.RestaurantId" class="btn btn-secondary">Cancel</a>
</form>