@model IEnumerable<szyBka_szAMa.Models.User>

<div class="container">
    <h1>Pracownicy</h1>

    <!-- Lista pracowników -->
    @foreach (var employee in Model)
    {
        <div class="card mb-3">
            <div class="row no-gutters">
                <!-- Informacje o pracowniku po lewej stronie -->
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@employee.FirstName @employee.LastName</h5>
                        <p class="card-text"><strong>Role:</strong> @employee.Role</p>
                    </div>
                </div>

                <!-- Przycisk Akcji po prawej stronie -->
                <div class="col-md-4 d-flex align-items-center justify-content-end">
                    <div>
                        <a asp-action="Edit" asp-controller="Users" asp-route-id="@employee.Id" class="btn btn-warning mb-2">Edit</a>
                        <a asp-action="Delete" asp-controller="Users" asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Powrót do szczegółów restauracji -->
    <a asp-action="Details" asp-controller="Restaurants" asp-route-id="@ViewBag.RestaurantId" class="btn btn-secondary">Back to Restaurant</a>
</div>
<style>
    /* Dodatkowy margines między kartami */
    .card {
        margin-bottom: 15px;
    }

    /* Margines dla przycisków */
    .btn {
        margin-right: 5px;
    }

</style>