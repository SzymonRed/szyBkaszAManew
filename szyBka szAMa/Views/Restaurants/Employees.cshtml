@model IEnumerable<szyBka_szAMa.Models.User>

<div class="container">
    <h1>Employees</h1>

    <table class="table">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var employee in Model)
        {
        <tr>
            <td>@employee.FirstName</td>
            <td>@employee.LastName</td>
            <td>@employee.Role</td>
            <td>
                <a asp-action="Edit" asp-controller="Users" asp-route-id="@employee.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-controller="Users" asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
        </tbody>
    </table>

    <!-- Powrót do szczegółów restauracji -->
    <a asp-action="Details" asp-controller="Restaurants" asp-route-id="@ViewBag.RestaurantId" class="btn btn-secondary">Back to Restaurant</a>
</div>