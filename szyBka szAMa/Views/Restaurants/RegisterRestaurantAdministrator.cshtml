@model szyBka_szAMa.Models.User

@{
ViewData["Title"] = "Register Restaurant Admin";
}

<h2>Register Restaurant Admin</h2>

<form asp-action="RegisterRestaurantAdministrator" method="post">
    <h4>User Information</h4>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <h4>Address Information</h4>
    <div class="form-group">
        <label>City</label>
        <input name="address.City" class="form-control" />
        <span asp-validation-for="Address.City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Street</label>
        <input name="address.Street" class="form-control" />
        <span asp-validation-for="Address.Street" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Zip Code</label>
        <input name="address.ZipCode" class="form-control" />
        <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Building</label>
        <input name="address.Building" class="form-control" />
        <span asp-validation-for="Address.Building" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Apartment</label>
        <input name="address.Apartment" class="form-control" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input name="address.Email" class="form-control" />
        <span asp-validation-for="Address.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Phone</label>
        <input name="address.Phone" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>

<!-- Przycisk logowania się -->
<div class="mt-3">
    <a href="@Url.Action("LoginAdminRestaurant", "Restaurants")" class="btn btn-secondary">Login if you have an administrator account</a>
</div>

@section Scripts {
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}